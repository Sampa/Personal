{% set assetDir = register_asset_bundle('frontend/assets/AppAsset') %}  {# asset root for yii advanced template #}
{{   void(this.beginPage()) }}
<!DOCTYPE html>
<html lang="{{ app.language }}">
<head>
    <meta charset="{{ app.charset }}">
    <meta name="viewport" content="width=device-width, initial-scale=2">
    {{ html('CsrfMetaTags') | raw }}
    <title>{{ this.title }}</title>
    {{ void(this.head) }}
</head>
<body>
{{   void(this.beginBody()) }}
<div class="top">
    <div class="brand">
            <img src="{{ app.view.theme.baseUrl }}/img/redhand.svg"> <span>Dovie' andi se tovya sagain</span>
    </div>
    <div class="address-bar">{{ t('Programming') }} | {{ t('World Today') }} | {{ t('Fun') }} | {{ t('Personal') }}</div>
</div>

    {{ nav_bar_begin({
        'brandLabel': '<div class="dovieBrand">
            <img  src="' ~ app.view.theme.baseUrl ~ '/img/redhand.svg"><span> Dovie\' andi se tovya sagain</span>
            </div>',
        'brandUrl': app.homeUrl,
        'brandOptions': {'style': 'display: block;'},
        'options': { 'class': 'navbar-default' },
        'renderInnerContainer': true,
    }) }}

    <!-- everyone can see Home page -->
    {% set menuItems = [{'label': t('Home'), 'url': ['/site/index']}] %}

    <!-- we do not need to display Article/index, About and Contact pages to editor+ roles -->
    {% if not app.user.can('editor') %}
        {% set menuItems = menuItems|merge([{ 'label': t('Articles'), 'url': ['/article/index'] }]) %}
        {% set menuItems = menuItems|merge([{ 'label': t('About'), 'url': ['/site/about'] }]) %}
        {% set menuItems = menuItems|merge([{ 'label': t('Contact'), 'url': ['/site/contact'] }]) %}
    {% elseif app.user.can('editor') %}
        {% set menuItems = menuItems|merge([{ 'label': t('Articles'), 'url': ['/article/admin'] }]) %}
    {% endif %}

    {% if app.user.isGuest == false %}
        {% set menuItems = menuItems|merge([
            {'label': 'About', 'url': ['/site/about']},
            {
                'label': t('logout') ~ '(' ~ app.user.identity.username ~ ')',
                'url': ['/site/logout'],
                'linkOptions': {'data-method': 'post'}
            }
        ])
    %}
    {% else %}
        {% set menuItems = menuItems|merge([
            {'label': t('Login'), 'url': ['/site/login']},
            {'label': t('Sign up'), 'url': ['/site/signup']},
        ])
    %}

    {% endif %}
    {{ nav_widget({
        'options': { 'class': 'navbar-nav navbar' },
        'items': menuItems
    }) | raw }}

    {{ nav_bar_end() }}

<div class="container-fluid" >

    <div class="row">
        {{ content | raw }}
        <!-- right column -->
        {#<aside class="col-lg-3 col-md-3 col-lg-push-1 col-md-push-1">#}
        <div id="slide-out-search" >
            <a class="handle btn btn-lg" href="#" role="button" >
                Search <span class="glyphicon glyphicon-search"></span>
            </a>
            <div class="sidebox shadow6" style="padding: 15px 5px;">
                <form class="form-inline" role="search">
                    <input type="text" class="form-control" id="exampleInputName2" placeholder="{{ t('Search term') }}">
                    <button type="submit" class="btn btn-default" style="">
                        <span class="glyphicon glyphicon-search"></span>
                    </button>
                </form>
            </div>
        </div>

        <div id="slide-out-language"  style="">
            {% set language = 'se' %}
            {% if app.language == 'en' %}
                {% set language = 'us' %}
            {% endif %}
            <a class="handle btn btn-lg" href="#" role="button">
                Language <span class="flag-icon flag-icon-{{ language }}"></span>
            </a>
            <div class="sidebox shadow6" style="padding: 15px 5px;">
                <div class="btn-group-vertical" role="group" aria-label="...">
                    <a href="/en/site/index" class="btn btn-default "><span class="flag-icon flag-icon-us flag"></span></a>
                    <a href="/se/site/index" class="btn btn-default "><span class="flag-icon flag-icon-se flag"></span></a>
                </div>
            </div>

            {#{{ LanguageSelector({'options': {'class': 'list-inline', 'style': 'padding: 2px 0;'}}) | raw }}#}
        </div>

            {#<div class="sidebox shadowbox shadow6">
                <h4 class=" text-center">Search</h4>
                <form class="form-inline " role="search" style="padding: 0 0 30px 0;">
                    <input type="text" class="col-lg-8 form-control" id="exampleInputName2" placeholder="{{ t('Search term') }}">
                    <button type="submit" class="btn btn-default" style="">
                        <span class="glyphicon glyphicon-search"></span>
                    </button>
                </form>
            </div>#}

        {#</aside>#}

    </div>
</div>

<footer class="footer">

    <div class="container">

        <div class="row">
            <div class="col-lg-22 text-center">

                <p>Copyright &copy; {{ t(app.name) }} {{  'now'|date('Y') }} {{ Yii.powered() | raw }}</p>
            </div>
        </div>

    </div>

</footer>
{{   void(this.endBody()) }}
</body>
</html>
{{   void(this.endPage()) }}