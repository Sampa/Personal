{{ set(this, 'title', t(app.name) ~' '~ t('Contact')) }}
<div class="container">

    <div class="row">
        <div class="box">
            <div class="col-lg-12">
                <hr>
                <h2 class="intro-text text-center">{{ t('Contact') }}
                    <strong>{{ app.name}}</strong>
                </h2>
                <hr>
            </div>

            <div class="col-md-8">
                <!-- Embedded Google Map using an iframe - to select your location find it on Google maps and paste the link as the iframe src. If you want to use the Google Maps API instead then have at it! -->
                <iframe width="100%" height="400" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"
                        src="http://maps.google.com/maps?hl=en&amp;ie=UTF8&amp;ll=37.0625,-95.677068&amp;spn=56.506174,79.013672&amp;t=m&amp;z=4&amp;output=embed"></iframe>
            </div>

            <div class="col-md-4">
                <p>{{ t('Phone') | raw }}:
                    <strong>+46736995406</strong>
                </p>
                <p>{{ t('Email') | raw }}:
                    <strong><a href="mailto:{{ param('adminEmail') }}">{{ param('adminEmail') }}</a></strong>
                </p>
                <p>{{ t('Address') }}:
                    <strong>{{ param('adminStreet') }}
                        <br>{{ param('adminCity') }}, {{ param('adminCountry') }}, {{ param('adminZip') }}</strong>
                </p>
            </div>

            <div class="clearfix"></div>
        </div> <!-- //box -->
    </div> <!-- //row -->

    <div class="row">
        <div class="box">
                <hr>
                <h2 class="intro-text text-center">{{ t('Contact') }}
                    <strong>{{ t('form') }}</strong>
                </h2>
                <hr>

                <p class="col-lg-12">{{ t('If you have business inquiries or other questions,
                    please fill out the following form to contact us. Thank you.')| raw }}</p>

                {{ use('yii/widgets/ActiveForm') }}
                {% set form = active_form_begin({
                    'id' : 'contact-form',
                    'options' : {'class' : ''},
                }) %}
                {{ form.field(model, 'name', {'options': {'class': 'col-lg-4'}}) | raw }}
                {{ form.field(model, 'email', {'options': {'class': 'col-lg-4'}}) | raw }}
                {{ form.field(model, 'subject', {'options': {'class': 'col-lg-4'}}) | raw }}
                {{ form.field(model, 'body', {'options': {'class': 'col-lg-12'}}).textArea({'rows': 6}) | raw }}
                {{ form.field(model, 'verifyCode',{'options': {'class': 'col-lg-12'}}).widget(CaptchaClassName(), {
                    'template': '<div class="row"><div class="col-lg-2">{image}</div><div class="col-lg-3">{input}</div></div>',
                }) | raw }}

                <div class="form-group col-lg-6">
                    {{ html('SubmitButton',[t('Submit'), {'class': 'btn btn-primary', 'name': 'contact-button'}]) | raw }}
                </div>

                {{ active_form_end() }}
        </div> <!--//box-->
    </div> <!-- //row -->
</div> <!-- //container -->
